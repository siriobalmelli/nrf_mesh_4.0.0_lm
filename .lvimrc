" Sirio's tree-specific vimrc to deal with braindead non-kernel code formatting style
if &ft == "c" || &ft == "cpp"
	setlocal shiftwidth=4 tabstop=4 softtabstop=4 expandtab autoindent cc=80 foldmethod=indent

	" ignore the avalanche of errors
	let g:ycm_show_diagnostics_ui = 1
	let g:ycm_enable_diagnostic_signs = 0
	let g:ycm_enable_diagnostic_highlighting = 0
endif
